<%
const works = [
    {
        ttl: '美容サプリ案件',
        txt: 'サプリを購入し、商品のレビューをしてもらうお仕事です。',
        img: '/images/about-work/about-work-img-2.png.webp',
        width: '368',
        height: '331',
        num: '20~30件',
        time: '10~20分',
        money: '500円＋商材費用'
    },
    {
        ttl: '美容サプリ案件',
        txt: 'サプリを購入し、商品のレビューをしてもらうお仕事です。',
        img: '/images/about-work/about-work-img-2.png.webp',
        width: '368',
        height: '331',
        num: '20~30件',
        time: '10~20分',
        money: '500円＋商材費用'
    },
  ]
%>

<div class="about-work__dot-box">
  <% include('../components/_section-dot') %>
</div>
<section class="about-work">

  <div class="about-work__ttl-container">
    <img class="about-work__ttl-container--img-1" src="/images/about-work/ttl-img.png.webp" width="94" height="187" alt="女の人のイラスト">
    <h2 class="about-work__ttl-container--ttl">
      <svg  xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
        <defs>
          <text  dy="0.4em" id="aboutWorkTtl">どんなお仕事・調査があるの</text>
        </defs>
        <use x="50%" y="50%" xlink:href="#aboutWorkTtl"></use>
        <use x="50%" y="50%" xlink:href="#aboutWorkTtl"></use>
      </svg>
    </h2>
    <img class="about-work__ttl-container--img-2" src="/images/about-work/q-mark.png.webp" width="156.26" height="159.11" alt="？">
  </div>

  <div class="about-work__works">
    <% for (const work of works) { %>
      <div class="about-work__work">
        <div class="work__img-with-dtl">
          <img  class="work__img-with-dtl--img" src="<%= work.img %>" width="<%= work.width %>" height="<%= work.height %>" alt="仕事のイメージ画像">
          <div class="work__img-with-dtl--dtl-wrapper">
            <div class="dtl-box">
              <div class="dtl-box__pink-box">
                <p class="dtl-box__pink-box--ttl">案件数</p>
              </div>
              <p class="dtl-box__txt"><%= work.num %></p>
            </div>
            <div class="dtl-box">
              <div class="dtl-box__pink-box">
                <p class="dtl-box__pink-box--ttl">所要時間</p>
              </div>
              <p class="dtl-box__txt"><%= work.time %></p>
            </div>
            <div class="dtl-box">
              <div class="dtl-box__pink-box">
                <p class="dtl-box__pink-box--ttl">謝礼金</p>
              </div>
              <p class="dtl-box__txt"><%= work.money %></p>
            </div>
          </div>
        </div>
        <div class="work__ttl-with-txt-box">
          <p class="work__ttl-with-txt-box--ttl"><%= work.ttl %></p>
          <p class="work__ttl-with-txt-box--txt"><%- work.txt %></p>
        </div>
      </div>
    <% } %>
  </div>

  <% include('../components/_section-dot') %>
</section>